###############################################################################
# terraform.tfvars.example
# Copy this file to terraform.tfvars and fill in your values.
# Do NOT commit terraform.tfvars to source control if it contains secrets.
###############################################################################

# ------------------------------------------------------------------------------
# General
# ------------------------------------------------------------------------------
acr_name              = "myacrregistry"
resource_group_name   = "rg-acr-prod"
create_resource_group = false
location              = "eastus"

tags = {
  environment = "prod"
  team        = "platform"
  cost_center = "12345"
}

# ------------------------------------------------------------------------------
# SKU & Core Settings
# ------------------------------------------------------------------------------
sku           = "Standard"   # Basic | Standard | Premium
admin_enabled = false

public_network_access_enabled = true   # Premium only; ignored on Basic/Standard
network_rule_bypass_option    = "AzureServices"  # AzureServices | None (Premium only)

data_endpoint_enabled   = false  # Premium only
zone_redundancy_enabled = false  # Premium only
export_policy_enabled   = true   # Premium only

