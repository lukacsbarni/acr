###############################################################################
# terraform.tfvars.example
# Copy this file to terraform.tfvars and fill in your values.
# Do NOT commit terraform.tfvars to source control if it contains secrets.
###############################################################################

# ------------------------------------------------------------------------------
# General
# ------------------------------------------------------------------------------
acr_name              = "myacrregistry"
resource_group_name   = "rg-acr-prod"
create_resource_group = false
location              = "eastus"

tags = {
  environment = "prod"
  team        = "platform"
  cost_center = "12345"
}

# ------------------------------------------------------------------------------
# SKU & Core Settings
# ------------------------------------------------------------------------------
sku           = "Standard"  # Basic | Standard | Premium
admin_enabled = false

# Standard and Premium only
anonymous_pull_enabled = false

# Premium only - ignored on Basic/Standard
public_network_access_enabled = true
network_rule_bypass_option    = "AzureServices"  # AzureServices | None
data_endpoint_enabled         = false
zone_redundancy_enabled       = false
export_policy_enabled         = true
quarantine_policy_enabled     = false

# ------------------------------------------------------------------------------
# Retention & Trust Policy (Premium only)
# ------------------------------------------------------------------------------

# Set to a number of days to enable, or null to disable
# retention_policy_in_days = 30

# Enable Docker Content Trust
# trust_policy_enabled = false

# ------------------------------------------------------------------------------
# Network Rules (Premium only)
# ------------------------------------------------------------------------------
# network_rule_set = {
#   default_action = "Deny"
#   ip_rules = [
#     { action = "Allow", ip_range = "1.2.3.4/32" }
#   ]
#   virtual_networks = [
#     { action = "Allow", subnet_id = "/subscriptions/.../subnets/mysubnet" }
#   ]
# }

# ------------------------------------------------------------------------------
# Geo-Replication (Premium only)
# Must be in alphabetical order and cannot include the primary location.
# ------------------------------------------------------------------------------
# georeplications = [
#   {
#     location                  = "westeurope"
#     regional_endpoint_enabled = true
#     zone_redundancy_enabled   = true
#   }
# ]

# ------------------------------------------------------------------------------
# Identity
# ------------------------------------------------------------------------------
identity_type = "SystemAssigned"  # None | SystemAssigned | UserAssigned | SystemAssigned, UserAssigned
# identity_ids = []               # Required if identity_type includes UserAssigned

# ------------------------------------------------------------------------------
# Encryption (Premium only)
# Provide this object to enable CMK; comment out or set to null to disable.
# Requires identity_type to include UserAssigned.
# ------------------------------------------------------------------------------
# encryption = {
#   key_vault_key_id   = "/subscriptions/.../keys/mykey/abc123"
#   identity_client_id = "00000000-0000-0000-0000-000000000000"
# }

